<%- include('./templates/header.ejs')%>

    <div class="heroPage">
        <div class="container column">
            <p class="littleTitle">Welcome to Bookly</p>
            <h1 class="title">Create your own book list</h1>
            <h1 class="title">and share it with others</h1>
            <form class="searchForm">
                <img src='./search.svg' />
                <input class="input" type="text" placeholder="Search for a book"/>
                <button class="btn blue rounded">Search</button>
            </form>
            <p class="createAcc">Donâ€™t have an account yet? <a href="/signup">Create new account</a></p>
            <img src='./heroBG.svg' />
        </div>
